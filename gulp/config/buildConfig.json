{
    "isProduction": false,
    "useSourceMaps": true,
    "root": ".",
    "distFolder": "dist",
    "devFolder": ".",
    "tempFolder": ".tmp",
    "appFolder": "./app",
    "html": {
        "main": "app/index.html",
        "all":  "app/**/*.html",
        "pages": "app/views/**/*.html"
    },

    "scripts": {
        "app": {
            "main": "app.js",
            "dir": "./app/js"
        }
    },
    "styles": "./app/css",
    "templates": {
        "app": "./app",
        "views": "./app/views"
    }
}